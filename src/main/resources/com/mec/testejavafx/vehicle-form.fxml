<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mec.testejavafx.VechicleFormController">
    <!-- Título -->
    <Label text="Dados do veículo" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <GridPane.margin>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </GridPane.margin>

        <!-- Linha 5: Marca -->
        <Label text="Marca:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="marca" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Mini"/>

        <!-- Linha 5: Veículo -->
        <Label text="Modelo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="modelo" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Cooper S"/>

        <!-- Linha 5: Veículo -->
        <Label text="Ano:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="ano" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="2015"/>

        <!-- Linha 6: Placa -->
        <Label text="Placa:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="placa" GridPane.rowIndex="6" GridPane.columnIndex="1" promptText="ABC-7A90"/>

        <!-- Linha 7: OBS -->
        <Label text="Observações:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="observacoes" GridPane.rowIndex="7" GridPane.columnIndex="1" promptText="carro com bateria falhando"/>

        <!-- Botão de Envio -->
        <Button text="Enviar" onAction="#onCadastrarVeiculoButtonClick" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>
</VBox>
